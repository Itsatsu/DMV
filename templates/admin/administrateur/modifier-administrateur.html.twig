{% extends 'base.html.twig' %}
{% block title %}Notre équipe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/stylecontact.css') }}">
{% endblock stylesheets %}


{% block body %}
    <main>

        <div class="bandeau d-flex justify-content-center flex-column align-items-center">
            <h1>Administrateur</h1>
            <p>Effectuez des modifications</p>
        </div>
        <div class="d-flex justify-content-center">
            <div class="rectangleformulaire">

                {{ form_start(form) }}

                <div>
                    <h4 class="text-center">Modifier un administrateur</h4>
                </div>
                <br>

                <div>
                    <label for="nomNewAdmin">Nom : </label>
                    {{ form_widget(form.nom, {'attr':{'value': admin.nom }}) }}
                    <div class="error d-flex align-content-center">
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <br>
                <div>
                    <label for="prenomNewAdmin">Prénom : </label>
                    {{ form_widget(form.prenom, {'attr':{'value': admin.prenom }}) }}
                    <div class="error d-flex align-content-center">
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
                <br>

                <div>
                    <label for="emailNewAdmin">Adresse E-mail : </label>
                    {{ form_widget(form.email, {'attr':{'value': admin.email }}) }}
                    <div class="error d-flex align-content-center">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <br>
                <div>
                    <label for="identifiantNewAdmin">Identifiant : </label>
                    {{ form_widget(form.identifiant, {'attr':{'value': admin.identifiant }}) }}
                    <div class="error d-flex align-content-center">
                        {{ form_errors(form.identifiant) }}
                    </div>
                </div>
                <br>
                <div>
                    <label for="passNewAdmin">Mot de passe : </label>
                    {{ form_widget(form.mdp) }}
                    <div class="error d-flex align-content-center">
                        {{ form_errors(form.mdp) }}
                    </div>
                </div>
                <br>
                <div>
                    <label for="superAdmin">Autoriser à ajouter d'autres administrateurs : </label>
                    {{ form_widget(form.addadmin,{'attr':{ 'checked': admin.addadmin}}) }}
                    <div class="error d-flex align-content-center">
                        {{ form_errors(form.addadmin) }}
                    </div>





                    <br>
                    <button class="btn btn-primary btn-block" type="submit">Modifier</button>

                    {{ form_end(form) }}
                    <br>
                    <br>
                    <a href="{{path('app_admin_ladmin')}}">Retour à la liste</a>

                </div>
            </div>
        </div>

    </main>
{% endblock body %}