{% extends 'base.html.twig' %}
{% block title %}Liste des lieux{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/stylecontact.css') }}">
{% endblock stylesheets %}


{% block body %}
    <main>

        <div class="bandeau d-flex justify-content-center flex-column align-items-center">
            <h1>Liste des lieux</h1>
            <p>Effectuez des modifications</p>
        </div>
        <div class="d-flex justify-content-center">
            <div class="rectangleadmin">

                    <div>
                        <h4 class="text-center">Les lieux</h4>
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor%}
                        {% for message in app.flashes('warning') %}
                            <div class="alert alert-warning">
                                {{ message }}
                            </div>
                        {% endfor%}
                        <br>
                        <div class="d-flex justify-content-between">

                            <a href="{{ path('app_admin_alieu') }}"><button type="button" class="btn btn-outline-primary btn-sm">Ajouter un lieu</button></a>

                            <a href="{{path('admin')}}">Retour au dashboard</a>

                        </div>
                    </div>
                <br>

                <div class="row justify-content-between">
                    <h4>Nom du lieu:</h4>

                    <div>
                        <h4>Action : </h4>
                    </div>
                </div>
                <br>
                <br>
                    {% for lieu in lieux %}
                    <div class="row justify-content-between">
                        <p>{{ lieu.nom }}</p>
                        <div>
                            <a href="{{ path('app_admin_mlieu', {id: lieu.id }) }}"><button type="button" class="btn btn-outline-primary btn-sm">Modifier</button></a>
                            <a href="{{ path('app_admin_dlieu', {id: lieu.id }) }}"><button type="button" class="btn btn-outline-danger btn-sm">Supprimer</button></a>
                        </div>
                    </div>
                    <hr>
                    {% endfor %}
                    <br>
                <br>

                    </div>




            </div>
        </div>

    </main>
{% endblock body %}